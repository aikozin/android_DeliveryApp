<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid android:color="#5aaa" />
            <stroke
                android:width="1px"
                android:color="#5aaa" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="#1aaa" />
            <stroke
                android:width="1px"
                android:color="#5aaa" />
        </shape>
    </item>
</selector>